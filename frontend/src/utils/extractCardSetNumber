// utils/extractCardSetNumber.js

/**
 * Extract the card set number from the OCR result text.
 * This function uses an enhanced regex to match formats like 123/123, 01/123, 123/SVP, etc.
 * @param {string} text - The OCR result text.
 * @returns {string} - The extracted card set number or a fallback message if not found.
 */
const extractCardSetNumber = (text) => {
  // Enhanced regex to match formats like 123/123, 01/123, 123/SVP, 181/162, etc.
  const regex = /\b\d{1,3}\/[A-Za-z0-9]{1,5}\b/g;
  const matches = text.match(regex);

  // Return the first valid match or a fallback message
  return matches && matches.length > 0 ? matches[0] : "Not detected";
};

export default extractCardSetNumber;
